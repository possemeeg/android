<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="2dp"
        android:right="2dp">
<shape >

            <stroke
                android:width="1dp"
                android:color="#8080FF" />

            <corners android:radius="4dp" />
        </shape></item>

    <item
        android:left="2dp"
        android:top="2dp">
<shape >

            <stroke
                android:width="1dp"
                android:color="#000010" />

            <corners android:radius="4dp" />
        </shape></item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
<shape >

            <gradient
                android:angle="315"
                android:endColor="#101060"
                android:startColor="#7070E0" />

            <corners android:radius="4dp" />
        </shape></item>

</layer-list>