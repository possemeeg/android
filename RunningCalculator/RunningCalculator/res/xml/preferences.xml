<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/title_preferences_filters" >

        <ListPreference
            android:key="@string/preference_key_unit_filter"
            android:title="@string/preference_title_unit_filter" 
            android:dialogTitle="@string/dialog_title_unit_filter"
            android:summary="@string/preference_summary_unit_filter"
            android:entries="@array/unit_filter_values_names"
            android:entryValues="@array/unit_filter_values"
            android:defaultValue="@string/preference_default_unit_filter"
            />

        <ListPreference
            android:key="@string/preference_key_ability_filter"
            android:title="@string/preference_title_ability_filter" 
            android:dialogTitle="@string/dialog_title_ability_filter"
            android:summary="@string/preference_summary_ability_filter"
            android:entries="@array/ability_filter_values_names"
            android:entryValues="@array/ability_filter_values"
            android:defaultValue="@string/preference_default_ability_filter"
            />

        <CheckBoxPreference
            android:key="@string/preference_key_debug_output"
            android:title="@string/preference_title_debug_output"
            android:summaryOn="@string/preference_summary_debug_output_on" 
            android:summaryOff="@string/preference_summary_debug_output_off"
            android:defaultValue="false" 
            />        
        
        </PreferenceCategory>

</PreferenceScreen>