<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
<shape >

            <stroke
                android:width="1dp"
                android:color="#708080FF" />

            <corners android:radius="4dp" />
        </shape></item>

    <item
        android:bottom="-1dp"
        android:left="1dp"
        android:right="-1dp"
        android:top="1dp">
<shape >

            <gradient
                android:angle="90"
                android:endColor="#000030"
                android:startColor="#000020" />

            <corners android:radius="4dp" />
        </shape></item>

</layer-list>