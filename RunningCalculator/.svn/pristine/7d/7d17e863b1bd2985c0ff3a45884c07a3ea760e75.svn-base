<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="inputValueDisplay">
        <item name="android:background">@drawable/keyboard_button_background</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="keyboardButtonStyle" parent="inputValueDisplay">
        <item name="android:layout_width">50dp</item>
    </style>

    <style name="wideKeyboardButtonBaseStyle" parent="inputValueDisplay">
        <item name="android:layout_width">80dp</item>
    </style>

    <style name="promptMessageStyle">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">@drawable/prompt_message_background</item>
    </style>

</resources>