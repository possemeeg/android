<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="2dp" android:right="2dp">
                <shape>
                    <stroke android:width="1dp" android:color="#8080FF" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
            <item android:top="2dp" android:left="2dp">
                <shape>
                    <stroke android:width="1dp" android:color="#000010" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
            <item android:bottom="1dp"
		        android:left="1dp"
		        android:right="1dp"
		        android:top="1dp">
            	<shape>
                    <gradient android:angle="315" android:endColor="#000040" android:startColor="#5050A0" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true" android:drawable="@drawable/keyboard_button_background_normal"/>
    <item android:drawable="@drawable/keyboard_button_background_normal"/>

</selector>