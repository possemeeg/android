<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dip" 
    >

    <TableLayout
        android:id="@+id/itemTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1" 
        android:background="@drawable/statuslist_item_background">

        <TableRow android:id="@+id/nameTableRow" 
            	android:background="@drawable/statuslist_item_header_background">

            <TextView
                android:id="@+id/name"
                style="@style/status_list_text_style"
                android:padding="3dip"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shoeRetiredText"
                style="@style/status_list_text_style"
                android:layout_margin="2dp"
                android:textSize="16sp" />
        </TableRow>

        <TableRow >

            <TextView
                style="@style/status_list_text_style"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:text="@string/total_distance_label"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/total_distance"
                style="@style/status_list_text_style"
                android:layout_margin="2dp"
                android:gravity="right"
                android:textSize="16sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow >

            <TextView
                style="@style/status_list_text_style"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:text="@string/last_date_label"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/last_date"
                style="@style/status_list_text_style"
                android:layout_margin="2dp"
                android:gravity="right"
                android:textSize="16sp"
                android:textStyle="bold" />
        </TableRow>

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp" />
    </TableLayout>

</LinearLayout>